<% layout('/layout/boilerplate') %>

<div class="container justify-content-center align-items-center mt-5">
    
    <div class="row">

        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1562679299-266edbefd6d7?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1052&q=80" alt="card-image">
                <div class="card-body ">
                    <h3 class="card-title text-muted text-center">Login</h3>
                    <form action="/login" method="POST" class='needs-validation' novalidate >
                        <div class="mb-3">
                            <label class='form-label' for="username">Username</label>
                            <input class='form-control' type="text" name="username" autofocus id="username" required>
                            <div class="valid-feedback">OK</div>
                        </div>
                        <div class="mb-3">
                            <label class='form-label' for="password">Passowrd</label>
                            <input class='form-control' type="password" name="password" id="password" required>
                            <div class="valid-feedback">OK</div>
                        </div class=''>
                        <button class="btn btn-primary col-12 mx-auto mt-5">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>









